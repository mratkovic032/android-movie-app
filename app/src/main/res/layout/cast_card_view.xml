<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageCastProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="4sp"
        android:layout_marginStart="4sp"
        android:contentDescription="@string/movieListPosterContentDescription"
        app:srcCompat="@drawable/default_profile" />

    <TextView
        android:id="@+id/labelCastName"
        android:layout_width="65sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageCastProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5sp"
        android:gravity="center_horizontal"
        android:textColor="@color/primaryTextColor"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/labelCastCharacterName"
        android:layout_width="65sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelCastName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1sp"
        android:gravity="center_horizontal"
        android:textColor="@color/secondaryTextColor"
        android:textSize="8sp" />
</RelativeLayout>